[ui]
username = Shoichi Ishida <sho1i4da@gmail.com>
editor = vim
ssh = ssh -C
verbose = True
ignore = ~/.hgignore_global

[web]
cacerts = /etc/hg-ca-roots.pem

[extensions]
graphlog =
fetch =
pager =
color =
hgk =
highlight =
progress =

[pager]
pager = LESS='-FRSX' less

[defaults]
# glog = -l 3
# glog = --template 'changeset:   {rev}:{node|short} {tags}\nsummary:     {desc|firstline|fill68|tabindent|tabindent}\n\n'
glog  = --template 'changeset: {rev}:{node|short} , {branch}:{tags}\nsummary: {desc|firstline|fill68|tabindent|tabindent}\n\n'

[alias]
ci = ci -m
